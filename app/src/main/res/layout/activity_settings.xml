<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Transcription Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transcription_settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_cloud_credentials"
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/credentialsEditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:hint="@string/paste_credentials_json"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:background="#1E1E1E"
                android:padding="12dp"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:scrollbars="vertical"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/testCredentialsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_credentials"
                android:layout_marginBottom="24dp" />

            <!-- Categories Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category_settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/addCategoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_category"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>