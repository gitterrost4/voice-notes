<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Categories Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category_settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/addCategoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_category"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp" />

            <!-- Transcription Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transcription_settings"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <ImageButton
                    android:id="@+id/transcriptionInfoButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/transcription_setup_info"
                    android:scaleType="centerInside"
                    android:tint="@color/text_secondary" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transcription_language"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background_secondary"
                android:padding="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_cloud_credentials"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/credentialsEditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:hint="@string/paste_credentials_json"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_disabled"
                android:background="@color/background_secondary"
                android:padding="12dp"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:scrollbars="vertical"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/saveCredentialsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_credentials"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>